{
  "name": "smart-pdf-reader-pro",
  "version": "1.0.7",
  "description": "A smart PDF reader with offline capabilities and text fixing features.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "publish": "electron-builder --publish always"
  },
  "keywords": [
    "pdf",
    "reader",
    "electron"
  ],
  "author": "Hemo",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-updater": "^6.1.7"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hemoIQ/Hemo-reader.git"
  },
  "build": {
    "appId": "com.hemo.smartpdfreader",
    "win": {
      "target": "nsis",
      "icon": "icon.ico",
      "publish": [
        "github"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false
    },
    "publish": [
      {
        "provider": "github",
        "owner": "hemoIQ",
        "repo": "Hemo-reader"
      }
    ],
    "asarUnpack": [
      "libs/cmaps/**/*"
    ]
  }
}